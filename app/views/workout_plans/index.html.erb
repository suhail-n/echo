<% content_for :title, "Workouts" %>
<div class="container mx-auto p-4 space-y-6">
  <!-- Header -->
  <%# <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4"> %>
  <div class="flex justify-between items-start sm:items-center gap-4">
    <h1 class="text-3xl font-bold">My Workouts</h1>
    <%= link_to new_workout_plan_path, class: "btn btn-sm btn-primary" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
      </svg>
      Create
    <% end %>
  </div>
  <!-- Weekly Calendar -->
  <div class="card bg-base-100 shadow-xl">
    <div class="card-body">
      <h2 class="card-title">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
        This Week
      </h2>
      <div class="grid grid-cols-7 gap-2 mt-4">
        <% 
          today = Date.current
          start_of_week = today.beginning_of_week
          days = %w[Mon Tue Wed Thu Fri Sat Sun]
          
          days.each_with_index do |day, index| 
            date = start_of_week + index.days
            is_today = date == today
            is_past = date < today
        %>
        <div class="flex flex-col items-center">
          <span class="text-xs font-medium mb-2"><%= day %></span>
          <div class="<%= is_today ? 'badge badge-primary' : is_past ? 'badge badge-ghost' : 'badge badge-outline' %> h-10 w-10 flex items-center justify-center">
            <%= date.day %>
          </div>
          <% if is_today %>
            <span class="text-xs text-primary mt-1">Today</span>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<!-- Current Active Workout Plan -->
<% current_plan = @workout_plans.first %>
<% if current_plan %>
  <div class="card bg-gradient-to-r from-primary to-secondary text-primary-content shadow-xl">
    <div class="card-body">
      <div class="flex items-center justify-between">
        <div>
          <div class="badge badge-accent mb-2">ACTIVE PLAN</div>
          <h2 class="card-title text-2xl"><%= current_plan.name %></h2>
          <p class="text-primary-content/80">
            <% if current_plan.is_template? %>
              Template Plan
            <% elsif current_plan.is_published? %>
              Published Plan
            <% else %>
              Personal Plan
            <% end %>
          </p>
        </div>
        <div class="dropdown dropdown-end">
          <div tabindex="0" role="button" class="btn btn-ghost btn-circle">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z" />
            </svg>
          </div>
          <ul tabindex="0" class="dropdown-content menu bg-base-100 text-base-content rounded-box z-[1] w-52 p-2 shadow">
            <li><%= link_to workout_plan_path(current_plan), class: "flex items-center gap-2" do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                </svg>
                View Details
              <% end %></li>
            <li><%= link_to edit_workout_plan_path(current_plan), class: "flex items-center gap-2" do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                </svg>
                Edit Plan
              <% end %></li>
            <li><hr class="my-1"></li>
            <li><%= button_to current_plan, method: :delete, class: "text-error flex items-center gap-2 w-full text-left", data: { turbo_confirm: "Are you sure? This will permanently delete your workout plan." } do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                </svg>
                Delete Plan
              <% end %></li>
          </ul>
        </div>
      </div>
      <div class="flex flex-wrap gap-2 mt-4">
        <%= link_to workout_plan_path(current_plan), class: "btn btn-accent btn-sm" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h1m4 0h1m-6 4h.01M15 14h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          Start Workout
        <% end %>
      </div>
    </div>
  </div>
<% end %>
<!-- All Workout Plans -->
<div class="card bg-base-100 shadow-xl">
  <div class="card-body">
    <h2 class="card-title">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14-7H5a2 2 0 00-2 2v11a2 2 0 002 2h14a2 2 0 002-2V8a2 2 0 00-2-2z" />
      </svg>
      All Workout Plans
      <div class="badge badge-secondary"><%= @workout_plans.count %></div>
    </h2>
    <% if @workout_plans.any? %>
      <div id="workout_plans" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 mt-4">
        <% @workout_plans.each do |workout_plan| %>
          <div id="workout_plan_<%= workout_plan.id %>" class="card bg-base-200 shadow-md hover:shadow-lg transition-shadow">
            <div class="card-body p-4">
              <div class="flex items-start justify-between">
                <div class="flex-1">
                  <h3 class="card-title text-lg"><%= workout_plan.name %></h3>
                  <div class="flex flex-wrap gap-1 mt-2">
                    <% if workout_plan.is_template? %>
                      <div class="badge badge-info badge-sm">Template</div>
                    <% end %>
                    <% if workout_plan.is_published? %>
                      <div class="badge badge-success badge-sm">Published</div>
                    <% end %>
                    <% if workout_plan == current_plan %>
                      <div class="badge badge-primary badge-sm">Active</div>
                    <% end %>
                  </div>
                </div>
                <div class="dropdown dropdown-end">
                  <div tabindex="0" role="button" class="btn btn-ghost btn-sm btn-circle">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z" />
                    </svg>
                  </div>
                  <ul tabindex="0" class="dropdown-content menu bg-base-100 rounded-box z-[1] w-52 p-2 shadow">
                    <% unless workout_plan == current_plan %>
                      <li><a href="#" onclick="alert('Activate plan feature coming soon!')" class="flex items-center gap-2">
                          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                          </svg>
                          Activate Plan
                        </a></li>
                      <li><hr class="my-1"></li>
                    <% end %>
                    <li><%= link_to workout_plan_path(workout_plan), class: "flex items-center gap-2" do %>
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                        </svg>
                        View Details
                      <% end %></li>
                    <li><%= link_to edit_workout_plan_path(workout_plan), class: "flex items-center gap-2" do %>
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                        </svg>
                        Edit Plan
                      <% end %></li>
                    <li><hr class="my-1"></li>
                    <li><%= button_to workout_plan, method: :delete, class: "text-error flex items-center gap-2 w-full text-left", data: { turbo_confirm: "Are you sure? This will permanently delete this workout plan." } do %>
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                        </svg>
                        Delete Plan
                      <% end %></li>
                  </ul>
                </div>
              </div>
              <div class="card-actions justify-end mt-4">
                <%= link_to workout_plan_path(workout_plan), class: "btn btn-primary btn-sm" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h1m4 0h1m-6 4h.01M15 14h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  Start
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-12">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 mx-auto text-base-300 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14-7H5a2 2 0 00-2 2v11a2 2 0 002 2h14a2 2 0 002-2V8a2 2 0 00-2-2z" />
        </svg>
        <h3 class="text-lg font-medium text-base-content mb-2">No workout plans yet</h3>
        <p class="text-base-content/70 mb-4">Create your first workout plan to get started!</p>
        <%= link_to new_workout_plan_path, class: "btn btn-primary" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          Create Your First Plan
        <% end %>
      </div>
    <% end %>
  </div>
</div>
</div>
